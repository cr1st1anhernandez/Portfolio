---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const translate = useTranslations(lang);
---

<div
  class="text-lg row-span-1 bg-[#212024] rounded-lg p-6 lg:p-12 col-span-3 font-normal text-neutral-400 lg:col-span-2"
>
  <h2 class="text-2xl lg:text-4xl pb-4 font-bold text-neutral-100">
    {translate("experienceTitle")}
  </h2>
  <div role="list">
    <div role="listitem">
      <header class="flex justify-between items-center py-2">
        <strong>{translate("experienceRole")}:</strong>
        <a
          href="https://therocketcode.com/"
          target="_blank"
          class="text-[#35A2B1] font-medium">Rocket Code ðŸš€</a
        >
      </header>
      <ul class="list-disc list-inside">
        <li>
          {translate("experienceItem1")}
        </li>
        <li>
          {translate("experienceItem2")}
        </li>
        <li>
          {translate("experienceItem3")}
        </li>
        <li>
          {translate("experienceItem4")}
        </li>
      </ul>
    </div>

    <div role="listitem">
      <strong>{translate("languages")}:</strong>
      <ul class="list-disc list-inside">
        <li>{translate("spanishLevel")}</li>
        <li>{translate("englishLevel")}</li>
      </ul>
    </div>
  </div>
</div>
