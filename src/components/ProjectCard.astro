---
import { Image } from "astro:assets";
import type { FC } from "react";
import { ArrowUpIcon } from "./Icons";

interface Props {
  title: string;
  description: string;
  image: ImageMetadata;
  imageAlt: string;
  url: string;
  icons: FC<{ width?: number }>[];
  visitSiteText: string;
}

const { title, description, image, imageAlt, url, icons, visitSiteText } =
  Astro.props;
---

<div class="flex flex-col gap-2 border-2 rounded-lg border-[#393a40] p-4">
  <header class="flex justify-between items-center">
    <h3 class="text-xl font-bold text-neutral-100">{title}</h3>
  </header>
  <p class="text-neutral-300">{description}</p>
  <Image src={image} alt={imageAlt} class="w-full rounded-lg mt-4" />
  <footer class="flex justify-between items-center">
    <div class="flex gap-2">
      {icons.map((Icon) => <Icon width={20} />)}
    </div>
    <a
      href={url}
      class="bg-gradient-to-r from-neutral-100 to-neutral-300 rounded-md flex gap-2 items-center text-neutral-800 px-2 py-1 font-semibold opacity-80 hover:opacity-100 transition-all ease-in-out duration-300"
      target="_blank"
      rel="noreferrer"
    >
      {visitSiteText}
      <ArrowUpIcon color="#000" height={20} width={20} />
    </a>
  </footer>
</div>
